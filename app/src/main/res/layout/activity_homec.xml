<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clientActivities.HomecActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="141dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lotemplate" />

    <Button
        android:id="@+id/avis"
        android:layout_width="267dp"
        android:layout_height="57dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="add"
        android:text="Avis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ouvrierbtn" />

    <Button
        android:id="@+id/BPbtn"
        android:layout_width="265dp"
        android:layout_height="56dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="add"
        android:text="Bon Plan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avis" />

    <Button
        android:id="@+id/logoutclient"
        android:layout_width="145dp"
        android:layout_height="49dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="add"
        android:text="DÃ©connexion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BPbtn" />

    <Button
        android:id="@+id/ouvrierbtn"
        android:layout_width="270dp"
        android:layout_height="58dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="add"
        android:text="Ouvriers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outilbtn" />

    <Button
        android:id="@+id/outilbtn"
        android:layout_width="275dp"
        android:layout_height="57dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="add"
        android:text="Materiels et outillage de chantiers"
        app:layout_constraintBottom_toTopOf="@+id/ouvrierbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>